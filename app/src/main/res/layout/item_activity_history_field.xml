<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="25dp">

    <TextView
        android:id="@+id/activity_history_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[date]"
        android:textColor="@color/darker_blue"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/activity_history_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity name"
        android:textColor="@color/darker_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/activity_history_item_date"
        app:layout_constraintLeft_toLeftOf="@id/activity_history_item_date" />

    <ImageView
        android:id="@+id/activity_history_item_delete_background"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/rect_rounded_360_light_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/activity_history_item_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/trash_icon"
        app:tint="@color/darker_blue"
        app:layout_constraintRight_toRightOf="@id/activity_history_item_delete_background"
        app:layout_constraintLeft_toLeftOf="@id/activity_history_item_delete_background"
        app:layout_constraintTop_toTopOf="@id/activity_history_item_delete_background"
        app:layout_constraintBottom_toBottomOf="@id/activity_history_item_delete_background" />


</androidx.constraintlayout.widget.ConstraintLayout>